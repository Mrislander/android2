<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select an image for your battery"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:id="@+id/gridview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/imageButton1"
            android:src="@drawable/car193_orange"
            android:layout_margin="@dimen/_2sdp"
            android:background="@color/white"
            android:layout_row="0"
            android:layout_column="0"/>


        <ImageButton

            android:src="@drawable/city_car_orange"
            android:background="@color/white"
            android:id="@+id/imageButton3"
            android:layout_margin="@dimen/_2sdp"
            android:layout_row="0"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:src="@drawable/van_orange"
            android:background="@color/white"
            android:layout_row="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/imageButton6"
            android:background="@color/white"
            android:src="@drawable/sports_bike_orange"
            android:layout_margin="@dimen/_2sdp"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/imageButton8"
            android:background="@drawable/md_transparent"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:background="@drawable/md_transparent"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:background="@drawable/md_transparent"
            android:layout_row="3"
            android:layout_column="0" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:background="@color/white"
            android:layout_row="3"
            android:layout_column="1" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:background="@color/white"
            android:src="@drawable/deep_cycle_battery_icon"
            android:layout_row="3"
            android:layout_margin="@dimen/_2sdp"
            android:layout_column="2" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:background="@color/white"
            android:src="@drawable/camera_orange"
            android:layout_row="2"
            android:layout_margin="@dimen/_2sdp"
            android:layout_column="0" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:src="@drawable/car194_orange"
            android:background="@color/white"
            android:layout_margin="@dimen/_2sdp"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:src="@drawable/truck_orange"
            android:background="@color/white"
            android:layout_row="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_column="0"/>


    </GridLayout>

</RelativeLayout>